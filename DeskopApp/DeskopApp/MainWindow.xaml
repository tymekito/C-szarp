    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.ColumnSpan="4" 
                 Grid.RowSpan="2" TextWrapping="Wrap" 
                 Text="Calculator" FontSize="30" LineHeight="1"  />
        <Button Content="7" HorizontalAlignment="Left" 
                Grid.Column="1" Grid.Row="2"
                VerticalAlignment="Top"  
                Click="Button_Click" Tag="Button_7" />
        <Button Content="8" HorizontalAlignment="Left" 
                Grid.Column="2" Grid.Row="2" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_8"/>
        <Button Content="9" HorizontalAlignment="Left" 
                Grid.Column="4" Grid.Row="2"
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_9"/>
        <Button Content="4" HorizontalAlignment="Left" 
                Grid.Column="1" Grid.Row="3"
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_4"/>
        <Button Content="5" HorizontalAlignment="Left" 
                Grid.Column="2" Grid.Row="3" 
                VerticalAlignment="Top"
                Click="Button_Click" Tag="Button_5"/>
        <Button Content="6" HorizontalAlignment="Left" 
                Grid.Column="3" Grid.Row="3" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_6"/>
        <Button Content="1" HorizontalAlignment="Left" 
                Grid.Column="1" Grid.Row="4"
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_1"/>
        <Button Content="2" HorizontalAlignment="Left" 
                Grid.Column="2" Grid.Row="4" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_2"/>
        <Button Content="3" HorizontalAlignment="Left" 
                Grid.Column="3" Grid.Row="4" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_3"/>
        <Button Content="0" HorizontalAlignment="Left" 
                Grid.Column="2" Grid.Row="5" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_0"/>
        <Button Content="/" HorizontalAlignment="Left" 
                Grid.Column="0" Grid.Row="1" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_Divide"/>
        <Button Content="reset" HorizontalAlignment="Left" 
                Grid.Column="4" Grid.Row="1" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_Reset"/>
        <Button Content="X" HorizontalAlignment="Left" 
                Grid.Column="0" Grid.Row="2" 
                VerticalAlignment="Top"
                Click="Button_Click" Tag="Button_Multiply"/>
        <Button Content="-" HorizontalAlignment="Left" 
                Grid.Column="0" Grid.Row="3" 
                VerticalAlignment="Top"
                Click="Button_Click" Tag="Button_Minus"/>
        <Button Content="+" HorizontalAlignment="Left" 
                Grid.Column="0" Grid.Row="4" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_Plus"/>
        <Button Content="=" HorizontalAlignment="Left" 
                Grid.Column="0" Grid.Row="5" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Button_Equals"/>
        <Button Content="+/-" HorizontalAlignment="Left" 
                Grid.Column="1" Grid.Row="5" 
                VerticalAlignment="Top" 
                Click="Button_Click" Tag="Plus_Minus"/>
        <Button Content="," HorizontalAlignment="Left" 
                Grid.Column="3" Grid.Row="5" 
                VerticalAlignment="Top" Width="199" Height="62"/>
        <TextBox x:Name="Sum" Text="0" TextAlignment="Center" 
                Grid.Column="2" Grid.Row="1" VerticalContentAlignment="Center" VerticalAlignment="Center"
                Width="199" Height="62"  FontSize="30" HorizontalAlignment="Center" />
        
    </Grid>
</Window>
